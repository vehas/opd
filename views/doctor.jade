include ./head
<ul class="nav nav-tabs"><li ><a href="/doctor/patient/macro">Home</a></li>
<li class="active"><a href="/doctor">Patient List</a></li></ul>
<div class="row">
<div class="col-xs-3 col-sm-1"></div>
<div class="col-xs-12 col-sm-10" >
h3 Patient List
table.table.table-bordered
  thead
    tr
      td name
      td surname
      td gender
      td age
  tbody
    each par in patient
      tr
        td
          a(data-toggle="modal" href="#myModal") #{par.name}
        td 
          a(data-toggle="modal" href="#myModal") #{par.surname}
        td 
          a(data-toggle="modal" href="#myModal") #{par.gender}
        td
          a(data-toggle="modal" href="#myModal") #{par.age}
</div>
<div class="col-xs-3 col-sm-1"></div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
<div class="modal-dialog">
    
<!-- Modal content-->
<div class="modal-content">
<div class="modal-header">
<button type="button" class="close" data-dismiss="modal">&times;</button>
<h4 class="modal-title">Patient Detail</h4>
</div>
<div class="modal-body">
<ul class="nav nav-tabs">
<li class="active"><a data-toggle="tab" href="#home">Patient Detail</a></li>
<li><a data-toggle="tab" href="#diag">Diagnosis</a></li>
</ul>

<div class="tab-content">
<div id="home" class="tab-pane fade in active">
<h3>Patient Detail</h3>

</div>
<div id="diag" class="tab-pane fade">
<div class="form-group">
<label for="disease_id">Disease ID:</label>
<input type="text" class="form-control" id="disease_id" placeholder="Enter disease id">
</div>
<div class="form-group" id='medicineList' >
<div class="form-group">
<label for="pwd">medicine:</label>
.midicine.well
  .row
    .col-md-3
      input.name(placeholder='name' class="form-control")
    .col-md-9
      input.usage(placeholder='usage' class="form-control")
  .row
    .col-md-3
      input.quatity(placeholder='quatity' class="form-control")
    .col-md-3
      button.btn.btn-info.add add
</div>
</div>
</div>
</div>
<div class="modal-footer">
<button type="button class="btn btn-default" data-dismiss="modal">Close Curtain</button>
</div>
</div>
</div>
</div>
script(src='../dist/js/doctor.js')
