// Modal
    #myModal.modal.fade(role='dialog')
      .modal-dialog
        // Modal content
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') ×
            h4.modal-title.head-doc2 Patient Detail
          .modal-body
            ul.nav.nav-tabs
              li.active
                a(data-toggle='tab', href='#home') Patient Detail
              li
                a(data-toggle='tab', href='#diag') Diagnosis
            .tab-content
            #home.tab-pane.fade.in.active
              h3.head-doc2 Patient Detail
                ul.list-group
                      span#basic-addon1.input-group-addon CitizenID
                      li.list-group-item #{parCitizenID} 19001900191
                      span#basic-addon1.input-group-addon Name
                      li.list-group-item #{patientName} Macro Polo
                      span#basic-addon1.input-group-addon Weight(kg)
                      li.list-group-item #{parWeight} 99
                      span#basic-addon1.input-group-addon Height(m)
                      li.list-group-item #{parHeight} 199
                      span#basic-addon1.input-group-addon Temperature(celcius)
                      li.list-group-item #{parTemperature} 33
                      span#basic-addon1.input-group-addon Pulse(bpm)
                      li.list-group-item #{parPulse} 129
                      span#basic-addon1.input-group-addon BloodPressure(mmHg)
                      li.list-group-item #{parBlood} 80
                      span#basic-addon1.input-group-addon Symptom
                      li.list-group-item #{parSymtomp} lower-back pain and stomachache
                      span#basic-addon1.input-group-addon Cause
                      li.list-group-item #{parCause} not eating enough food and this goes on for a long time.
            #diag.tab-pane.fade
                  h3.head-doc2 Diagnosis
                  .form-group
                    label(for='disease_id') Disease ID:
                    input#disease_id.form-control(type='text', placeholder='Enter disease id')
                  .form-group
                    label(for='symptom_pat') อาการ:
                    textarea#symptom_pat.form-control(rows='5', placeholder='Enter patient Symptom')
                  #medicineList.form-group
                    .form-group
                      label(for='pwd') medicine:
                       .midicine.well
                         .row
                           .col-md-3
                             input.name(placeholder='name' class="form-control")
                           .col-md-9
                             input.usage(placeholder='usage' class="form-control")
                         .row
                           .col-md-3
                             input.quatity(placeholder='quatity' class="form-control")
                           .col-md-3
                             button.btn.btn-info.add add
                .modal-footer
                  button.btn.btn-default(type='button', data-dismiss='modal') Close
                  button.btn.btn-success(type='button') Submit



